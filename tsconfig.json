{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "exclude": [
    "source/**/*-spec.ts"
  ],
  "include": [
    "source/**/*.ts"
  ]
}
